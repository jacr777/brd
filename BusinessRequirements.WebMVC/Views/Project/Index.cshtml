@model IEnumerable<BusinessRequirements.Models.Project.ProjectListItem>

@{
    ViewBag.Title = "Index";
}
<br />
<h2>Project List</h2>

<p>
    @Html.ActionLink("New Project", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ticket)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Area)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Budget)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedUtc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    @Html.HiddenFor(model => item.ProjectId)

    <td>
        @Html.DisplayFor(modelItem => item.Ticket)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProjectName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Area)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Budget)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CreatedUtc)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ProjectId }) |
        @Html.ActionLink("Details", "Details", new { id = item.ProjectId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ProjectId })
    </td>
</tr>
    }

</table>
